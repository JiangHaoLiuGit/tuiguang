@import './common/main.wxss';


[data-custom-hidden="true"],[bind-data-custom-hidden="true"]{
  display: none !important;
}

/* 全局样式 */

page, view, scroll-view, swiper, movable-area, cover-view, text, icon, rich-text, progress, button, checkbox-group, checkbox, form, input, label,picker{
  box-sizing: border-box;
}
page>view{
  
}
body{
  background-color: #f8f8f8;
}
@font-face {
  font-family: 'PingFang SC';
  /* src: url('https://songgete.oss-cn-hangzhou.aliyuncs.com/file/PingFangSC-Bold.ttf'); */
  font-weight: bold;
  font-style: normal;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.contenter{
  display: flex;
  align-items: center;
  justify-content: center;
}
.boxShadow{
  box-shadow:0 6rpx 12rpx rgba(0,0,0,.08)
}
.borderRadius{
  border-radius:8rpx;
}
.left{
  float: left;
}
.right{
  float: right;
}
.por{
  position: relative;
}
.poa{
  position: absolute;
}
.clearfix:after{
  clear: both;
  content:"";
  display: table;
}
.marginTop{
  margin-top: 128rpx;
}
/* 顶部导航栏css全局 */
.headTop{
	background-color: #2E95FA;
  padding: 60rpx 28rpx 18rpx 30rpx;
  width: 750rpx;
  height: 60rpx;
  box-sizing: content-box;
  overflow: hidden;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 15;
}
.headTop .img{
  width: 20rpx;
  height: 35rpx;
  position: relative;
  display: inline-block;
  top: 5rpx;
}
.headTop .img .block{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: -8rpx;
  left: -15rpx;
}
.headTop image{
  width: 20rpx;
  height: 35rpx;
  
}
.headTop .view{
  font-size: 36rpx;
  text-align: center;
  display: inline-block;
  width: calc(100% - 120rpx);
  color: #fff;
  padding-right: 30rpx;
}
/* 分享弹框 */
.point{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 13;
  background: rgba(0,0,0,.5);
}
.point .box{
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content:center;
  align-items:center;
}
.point .box .boxContent{
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  padding-top: 30rpx;
}
.point .box .boxContent .pointView{
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}
.point .box .boxContent .title{
  font-size: 34rpx;
  margin-bottom: 20rpx;
  color: #666666;
  text-align: center;
  padding: 0 30px;
}
.point .box .boxContent .pointBtn{
  border-top: 2rpx solid #eee;
  height: 100rpx;
}
.point .box .boxContent .pointBtn>view{
  width: 50%;
  height: 100rpx;
  float: left;
  display: flex;
  justify-content: center;
  align-items:center;
  font-size: 34rpx;
  font-weight: bold;
}
.point .box .boxContent .pointBtn .secondBtn{
  border-left: 2rpx solid #eee;
  color: #2E95FA;
  position: relative;
}
.point .box .boxContent .pointBtn .secondBtn .sbBtn{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
  z-index: 20;
}


