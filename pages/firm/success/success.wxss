/* pages/firm/success/success.wxss */
.top{
  padding: 18rpx 80rpx 14rpx;
  text-align: center;
  width: 750rpx;
  height: 100rpx;
  margin: 128rpx auto 0;
  background-color: #fff;
}
.top image{
  width: 530rpx;
  height: 32rpx;
}
.top .txt{
  display: flex;
  justify-content:space-between;
  align-items:center;
  margin-top: -17rpx;
}
.top .txt text{
  font-size: 24rpx;
  line-height: 32rpx;
  color: #2E95FA;
}
.top .txt text.color{
  color: #999999;
}
.center{
  margin-top: 40rpx;
}
.center .conten{
  width: 750rpx;
  height: 72rpx;
  color: #666;
  font-size: 28rpx;
  
  padding: 0 30rpx;
  background: #ffff;
  margin-bottom: 2rpx;
}
.center .conten .img{
  width: 42rpx;
  height: 32rpx;
  margin-top: 32rpx;
}
.center .conten text{
  line-height: 38rpx;
  padding-top: 16rpx;
}
button.btn{
  height: 92rpx;
  width: 690rpx;
  margin: 44rpx auto 70rpx;
  border-radius: 8rpx;
  background: #CCCCCC;
  box-shadow: 0px 0 20px rgba(0, 0, 0, 0.05);
  line-height: 92rpx;
  border: none;
  font-size: 40rpx;
  color: #666666;
}
.center .pic{
  padding:18rpx 86rpx 12rpx;
  display: flex;
  justify-content:space-around;
  background: #fff;
}
.center .pic .box{
  width: 160rpx;
}
.center .pic .img{
  width: 160rpx;
  height: 160rpx;
  background:#E2E2E2;
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
}
.center .pic .img image{
  max-width: 142rpx;
  max-height: 144rpx;
}
.center .pic text{
  color: #666;
  font-size: 24rpx;
  line-height: 32rpx;
  display: inline-block;
  width: 160rpx;
  text-align: center;
}
.blockBox{
  width: 750rpx;
  /* 667px */
  height: 100vh;
  background: rgba(0,0,0,.5);
  z-index: 100;
  position: fixed;
  left: 0;
  top: 0;
}
.blockBox .por.por3{
  width: 750rpx;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
