/* pages/firm/pending/pending.wxss */
.page{
  width: 100%;
  height: 100vh;
  position: relative;
}
.blockBox{
  width: 750rpx;
  height: 100vh;
  background: rgba(0,0,0,.5);
  z-index: 100;
  position: absolute;
  left: 0;
  top: 0;
}
.blockBox .por{
  width: 750rpx;
  height: 100vh;
}
.blockBox .child{
  bottom: 0;
  left: 0;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  background: #fff;
  width: 750rpx;
  padding: 18rpx 30rpx 36rpx 30rpx ;
}
.blockBox .child .title{
  display: inline-block;
  width: 100%;
  color: #2E95FA;
  font-size: 36rpx;
  line-height: 48rpx;
  margin-bottom: 22rpx;
  text-align: center;
}
.blockBox .child .tit{
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #E3E3E3;
  color: #333333;
  font-size: 28rpx;
  line-height: 38rpx;
}
.blockBox .child .tit textarea{
  width: 690rpx;
  min-height: 160rpx;
  border: 2rpx solid #E3E3E3;
  border-radius: 8rpx;
  padding: 24rpx;
  margin-top: 16rpx;
  margin-bottom: 10rpx;
}
.blockBox .child .input{
  margin-top: 36rpx;
}
.blockBox .child .input input{
  height: 80rpx;
  border: 2rpx solid #E3E3E3;
  border-radius: 8rpx;
  padding-left: 20rpx;
}
.blockBox .child .check{
  padding: 0 40rpx;
  margin-top: 24rpx;
}
.blockBox .child .check .group{
  display: flex;
  justify-content: space-between;
}
.blockBox .child .check label{
  color: #333333;
  font-size: 28rpx;
  line-height: 38rpx;
}
.blockBox .child .check label .checkbox{
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.blockBox .child button{
  height: 92rpx;
  width: 100%;
  border-radius: 8rpx;
  background: #2E95FA;
  line-height: 92rpx;
  font-size: 40rpx;
  margin-top: 48rpx;
  color: #fff;
}
.blockBox .por.por3{
  width: 750rpx;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.blockBox .por.por3 image{
  max-width: 700rpx;
  max-height: 90vh;
}